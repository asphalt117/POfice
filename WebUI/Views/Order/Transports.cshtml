@model IEnumerable<Domain.Entities.Transport>
@{
    ViewBag.Title = "Транспорт";
}
<p>
    @Html.ActionLink("Новый транспорт", "CreateTec", null,
                new
                {
                    @class = "actionButtons btn btn-default btn-success",
                    @role = "button",
                    @title = "Новый транспорт"
                })
</p>
<table class="table">
    <tr>
        <th>
            Тип
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TecModel)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="@Html.Encode((item.istrust) ? "tr-grey" : "")">
            <td>
                @if (item.istrust)
                { @Html.Encode("Доверенный");
                }
            </td>
            <td>
               
                @Html.ActionLink(item.Gn, "NewDriv", new { gn = item.Gn })

            </td>
            <td>
                @Html.ActionLink(item.TecModel, "NewDriv", new { gn = item.Gn })

            </td>
        </tr>
    }
</table>
