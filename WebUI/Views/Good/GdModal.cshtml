@model Domain.Entities.OrderProductView
<!-- Модальное окно -->
@using (Html.BeginForm("GoodAdd", "Good", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
{
    <fieldset>
        @Html.HiddenFor(model => model.OrderId)
        @Html.HiddenFor(model => model.GoodId)
    </fieldset>

    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">
                Х
            </button>
            <h4>Товар</h4>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Название товара:</dt>
                <dd>@Html.DisplayFor(model => model.Good)</dd>
                <dt>Кол-во</dt>
                <dd>@Html.DisplayFor(model => model.Quant)</dd>
                @Html.TextBoxFor(model => model.Quant, new { @class = "form-control numfield", @value = "123.45", @pattern = "\\d+(,\\d{0,3})?" })
            </dl>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            <input type="submit" value="Сохранить" class="actionButtons btn btn-xs-sm-md btn-success" />
        </div>
    </div>
}



