@model IEnumerable<Domain.Entities.OrgTrustTec>
@using WebUI.Helpers;
@{
    ViewBag.Title = ViewBag.ContentTitle = "Выбор доверенного транспорта";
}
<h2>Доверенный транспорт</h2>
<p>
    @Html.SmplBtn("add", "Создать новую доверенность", "Создать", Url.Action("CreateTec", "TrustTec").ToString())
</p>
@if (Model.Count() > 0)
{
    List<string> lsHeaders = new List<string>();
    lsHeaders.Add(Html.DisplayNameFor(model => model.TecModel).ToString());
    lsHeaders.Add(Html.DisplayNameFor(model => model.Gn).ToString());
    lsHeaders.Add(Html.DisplayNameFor(model => model.Driv).ToString());
    lsHeaders.Add(Html.DisplayNameFor(model => model.Good).ToString());
    lsHeaders.Add(Html.DisplayNameFor(model => model.BeginDat).ToString());
    lsHeaders.Add(Html.DisplayNameFor(model => model.EndDat).ToString());
    @Html.TableHeader(lsHeaders)
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TecModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Good)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDat)
            </td>
        </tr>
    }
    @Html.TableEnd()
}
else
{
    <h2>У вас нет действующих доверенностей</h2>
}