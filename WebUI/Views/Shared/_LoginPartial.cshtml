@model  string
@{
    string classfor = "clearfix p-0";
    if (Model == "md")
    {
        //classfor = classfor + " d-md-block d-none w-100 logoutform-md";
        classfor = classfor + " d-md-block d-none logoutform-md";
    }

    if (Model == "sm")
    {
        classfor = classfor + " d-sm-flex d-md-none w-auto logoutform-sm";
    }
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = classfor, @id= "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav px-3 flex-row float-right">
            <li class="nav-item text-nowrap d-inline">
                <a href="@Url.Action("ChangePassword", "Account")" title="Изменить пароль" class="nav-link mr-3 log-user">
                    <i class="fas fa-user-alt"></i>&nbsp;@User.Identity.GetUserName()
                </a>
            </li>
            <li class="nav-item text-nowrap d-inline">
                <a href="javascript:document.getElementById('logoutForm').submit()" title="Выйти из Личного Кабинета" class="nav-link log-out">
                    <i class="fas fa-sign-out-alt"></i><span class="d-none d-md-inline">&nbsp;Выход</span>
                </a>
            </li>
        </ul>
    }
}
