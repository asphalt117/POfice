@model Domain.Entities.OrderV
@{
    ViewBag.Title = ViewBag.ContentTitle = ViewBag.Order;
}
@section metatags
{
    <meta name="description" content="@ViewBag.Title" />
    <meta name="keywords" content="@ViewBag.Title, АБЗ-4" />
    <meta name="robots" content="noindex, nofollow">
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<h5>Вы заказываете:</h5>
@{Html.RenderAction("GoodOrder", "Good", new { ord = Model.OrderId });}
@if (Model.Invoice == 0) {Html.RenderAction("DateOrder", "Ord", new { ord = Model.OrderId });}
<div class="order-nodata">
    @using (Html.BeginForm("Contract", "Ord", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset>
            @Html.HiddenFor(model => model.OrderId)
        </fieldset>
        <div class="orderform-contract active order-item">
            <div class="form-group row">
                <label for="ContractId" class="col-sm-2 col-form-label">Выберите договор:</label>
                <div class="col-sm-10">
                    @Html.DropDownList("SelectedContractId", (SelectList)ViewData["Contract"], new { onchange = "$(this.form).submit();" })
                </div>
            </div>
            <hr />
        </div>
    }
    @if (Model.Invoice == 0)
    {
        <div class="orderform-delivery order-item">
            <div class="form-group">
                @Html.ActionLink("Самовывоз >>", "Index", "Transport", new { ord = Model.OrderId }, new {@class="btn btn-success" })
                @Html.ActionLink("Транспорт АБЗ >>", "AdresOrder", "Adres", new { ord = Model.OrderId }, new { @class = "btn btn-success" })
            </div>
        </div>
    }
    else
    {
        <div class="orderform-delivery order-item">
            <div class="form-group">
                @Html.ActionLink("Самовывоз>>", "Index", "Transport", new { ord = Model.OrderId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Транспорт АБЗ>>", "AdresOrder", "Adres", new { ord = Model.OrderId }, new { @class = "btn btn-success" })
            </div>
        </div>

    }
</div>

