@model Domain.Entities.OrderDriv
@{
    ViewBag.Title = ViewBag.ContentTitle = "Транспорт к заказу";
}
@using (Html.BeginForm("Trans","Transport", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset>
        @Html.HiddenFor(model => model.OrderDrivId)
        @Html.HiddenFor(model => model.OrderId)
    </fieldset>
    <div class="form-group row">
        <label for="orderidinfo" class="col-sm-2 col-form-label">Заказ №:</label>
        <div class="col-sm-10" id="orderidinfo">
            <b>@Model.OrderId</b>
        </div>
    </div>
    <hr />
    <div class="form-group row">
        @Html.LabelFor(model => model.TecModel, htmlAttributes: new { @class = "control-label col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TecModel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TecModel, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Gn, htmlAttributes: new { @class = "control-label col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Gn, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gn, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(@HttpUtility.HtmlDecode("&laquo;") + " вернуться к списку транспорта", "Index", null, new { @class = "btn btn-light", @role = "button", @title = "Вернуться к списку транспорта" })
            <input type="submit" value="Продолжить >>" class="btn btn-success" title="Сохранить и продложить оформление заказа" />
        </div>
    </div>
}