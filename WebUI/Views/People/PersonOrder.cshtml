@model Domain.Entities.OrderV
@using (Html.BeginForm("PersonSelect", "People", FormMethod.Post, new { @id = "frmperson", @class = "form-horizontal order-nodata frm-container", @role = "form", @enctype = "multipart/form-data" }))
{
    <h4 class="h4-grey">&nbsp;&nbsp;&nbsp;&nbsp;Контакт</h4>
    <br />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset>
        @Html.HiddenFor(model => model.OrderId)
    </fieldset>
    <div class="form-group row">
        <label for="PersonId" class="col-sm-2 col-form-label">Контактное лицо:</label>
        <div class="col-sm-10 col-form-input" id="ordercontactinfo">
            @Html.DropDownList("SelectedPersonId", (SelectList)ViewData["Person"], new { onchange = "$(this.form).submit();", autofocus = true })
        </div>
    </div>
}